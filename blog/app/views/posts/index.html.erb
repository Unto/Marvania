<h1>Listing Events</h1>
<%= link_to "Marvania", controller: "posts" %>

<%= link_to 'New event', new_post_path %>
<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th></th>
		<th></th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.text %></td>
			<td><%= link_to 'Show', post %></td>
			<td><%= link_to 'Edit', edit_post_path(post) %></td>
		</tr>
	<% end %>
</table>